<!DOCTYPE html>
<html>
  <head>
    <title>FBClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <header>
      <ul class="top_menu clearfix">
      <% if logged_in? %>
        <li><%= link_to "HiBook", posts_path, class: 'btn btn-default' %></li>
        <li><%= link_to "投稿一覧", posts_path, class: 'btn btn-default' %></li>
        <li><%= link_to "新規投稿", new_post_path, class: 'btn btn-default' %></li>
        <li><%= link_to "マイページ", user_path(current_user.id), class: 'btn btn-default' %></li>
        <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: 'btn btn-default' %></li>
      <% else %>
        <li><%= link_to "HiBook", posts_path, class: 'btn btn-default' %></li>
        <li><%= link_to "投稿一覧", posts_path, class: 'btn btn-default' %></li></button>
        <li><%= link_to "アカウント作成", new_user_path, class: 'btn btn-default' %></li></button>
        <li><%= link_to "ログイン", new_session_path, class: 'btn btn-default' %></li></button>
      <% end %>
      </ul>
      </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <%= yield %>
    <footer>

    </footer>
    </div>
  </body>
</html>
